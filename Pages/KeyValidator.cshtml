@page
@model KeyValidatorModel
@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="container mt-5 w-75 h-75 d-flex flex-column justify-content-center align-items-center">
    <h1>Valide sua senha!</h1>
    <form method="post">
        <div class="form-group mt-3">
            <input type="text" id="passwordField" name="Password" class="form-control" />  
        </div>
        <div class="mt-4 ms-5">
            <button class="btn btn-primary" type="submit" formaction="/KeyValidator?handler=ValidarSenha">Validar Senha</button>
        </div>
    </form>
    <div class="mt-3">
        @if (!string.IsNullOrEmpty(Model.MensagemValidacao))
        {
            <div class="alert @(Model.IsSenhaValida ? "alert-success" : "alert-danger")" role="alert">
                @Model.MensagemValidacao
            </div>
        }
    </div>
</div>
